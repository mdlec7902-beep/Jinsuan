#include <stdio.h>
#define MAX 100

int main()
{
    int item;
    int i;
    int id;
    int in[MAX];
    int out[MAX];
    int total[MAX];

    printf("판매할 상품 갯수 입력: ");
    scanf("%d", &item);

    printf("상품별 입고수량 입력: ");
    for (i = 0; i < item; i++) {
        scanf("%d", &in[i]);
    }

    printf("상품별 판매수량 입력: ");
    for (i = 0; i < item; i++) {
        scanf("%d", &out[i]);
    }

    int total_sales = 0;
    int total_input = 0;
    int max_sales = out[0];
    int min_sales = out[0];
    int max_id = 1;
    int min_id = 1;

    for (i = 0; i < item; i++) {
        total[i] = in[i] - out[i];

        total_sales += out[i];
        total_input += in[i];

        if (out[i] > max_sales) {
            max_sales = out[i];
            max_id = i + 1;
        }
        if (out[i] < min_sales) {
            min_sales = out[i];
            min_id = i + 1;
        }
    }


    printf("재고를 파악할 상품의 ID 입력: ");
    scanf("%d", &id);
    printf("입력한 상품(ID %d)의 재고수량: %d\n", id, total[id - 1]);
    
    printf("\n");

    printf("\n전체 상품의 재고수량: ");
    for (i = 0; i < item; i++) {
        printf("%d ", total[i]);
    }
    printf("\n");

    double sales_rate = 0.0;

    if (total_input > 0) {
        sales_rate = (double)total_sales / total_input * 100;
    }

    printf("총 판매량: %d (판매율: %.2f%%)\n", total_sales, sales_rate);

    printf("가장 많이 판매된 상품: ID %d, 판매량 %d\n", max_id, max_sales);
    printf("가장 적게 판매된 상품: ID %d, 판매량 %d\n", min_id, min_sales);

    for (i = 0; i < item; i++) {
        if (total[i] <= 2) {
            printf("상품 ID %d: 재고 부족(%d)\n", i + 1, total[i]);
        }
    }

    return 0;
}
